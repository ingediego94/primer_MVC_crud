@model IEnumerable<inicio_Mvc_Csharp.Models.Producto>

<h1>Lista de productos</h1>


<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form asp-action="Store">
                    <h5>Crear un nuevo producto</h5>
                    <div class="mt-3 d-flex flex-column">
                        <label for="nombre_p">Nombre</label>
                        <input id="nombre_p" type="text" class="form-control" name="nombre_p" required >
                    </div>

                    <div class="mt-3 d-flex flex-column">
                        <label for="descripcion">Descripcion</label>
                        <input id="descripcion" type="text" class="form-control" name="Descripcion" placeholder="Descripcion del producto" required>
                    </div>

                    <div class="mt-3 d-flex flex-column">
                        <label for="precio">Precio</label>
                        <input id="precio" type="number" class="form-control" name="precio" required>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-success w-100">Guardar información</button>
                </form>
            </div>
        </div>
    </div>    
    
    
    <div class="col-md-9">
        
        <table class="table table-striped">
            <!--Encabezados-->
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nombre</td>
                    <td>Precio</td>
                    <td>Descripción</td>
                    <td>Acciones</td>
                </tr>
            </thead>
    
            <!--Cuerpo de la tabla-->
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Nombre</td>
                    <td>@item.Precio</td>
                    <td>@item.Descripcion</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-controller="Producto" asp-route-id="@item.ID">Detalles</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-controller="Producto" asp-route-id="@item.ID">Editar</a>
                        <a class="btn btn-danger" asp-action="Deleting" onclick="return confirm('¿Do you want to delete this product?');" asp-controller="Producto" asp-route-id_prod="@item.ID" >Delete</a>
                    </td>
                </tr>
            }
            </tbody>
    
        </table>
    </div>
    
</div>

